<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td>
        <%= image_tag 'sample-author1.jpg' %>
        <%= @book.user.name %>
      </td>
      <td>
        <%= link_to book_path(@book) do %>
        <%= @book.title %>
        <% end %>
      </td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
      <% end %>
    </tr>
  </tbody>
</table>